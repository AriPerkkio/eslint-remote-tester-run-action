{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "target": "ES2022",
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": ["es2022"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["src", "test"]
}
